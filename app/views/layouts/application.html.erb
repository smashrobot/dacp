<!DOCTYPE html>
<html>
<head>
  <title>
    <% if @title %>
      <%= @title %>
    <% else %>
      Dave Peiris
    <% end %>
  </title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='https://fonts.googleapis.com/css?family=Lora:400,700|Montserrat:400,700' rel='stylesheet' type='text/css'>
  <meta name="description" content="">
  <%= csrf_meta_tags %>
</head>
<body>

<div class="page-wrap">
  <%= yield %>
</div>

<footer class="footer">
  <div class="container">
    <div class="row">
      <div class="twelve columns">
        <p>&copy; <%= Date.today.strftime("%Y") %></p>
      </div>
    </div>
  </div>
</footer>

</body>
</html>
